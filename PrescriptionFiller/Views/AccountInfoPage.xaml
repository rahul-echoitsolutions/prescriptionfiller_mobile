                    <Label Text="{Binding carrier_number}" Margin="0, 0, 0, 10" />
                    <Label Text="Plan" FontSize="Small" FontAttributes="Italic" TextColor="Silver" />
                    <Label Text="{Binding plan_number}" Margin="0, 0, 0, 10" />
